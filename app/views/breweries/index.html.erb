<h1>Listing breweries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', breweries_path(order:"name") %> </th>
      <th> <%= link_to 'Year', breweries_path(order:"year") %> </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
<!--        <td><%= link_to 'Show', brewery %></td>-->
        <td><%= link_to('Edit', edit_brewery_path(brewery), class:'btn btn-primary') if current_user %></td>
        <td><%= link_to('Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger') if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p><%= "Number of breweries: #{@breweries.count}" %></p>
<%= link_to('New Brewery', new_brewery_path, class:'btn btn-primary') if current_user %>

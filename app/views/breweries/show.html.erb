<p id="notice"><%= notice %></p>

<% cache @brewery do %>
<h2>
  <strong>Name:</strong>
  <%= @brewery.name %>
 <% if not @brewery.active  %>
      <span class="label label-info">retired</span>
  <% end %>
</h2>

<i>
  Established in <%= @brewery.year %>
</i>

<p><%= @brewery.beers.count %> beers</p>

<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>

<p>
Has <%= pluralize(@brewery.ratings.count,'rating') %>, average rating <%= round(@brewery.average_rating) %>
</p>
<% end %>

<% if current_user %> 
<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %> |
<%end%>
<%= link_to 'Back', breweries_path %>
<p>
<%= link_to 'list of breweries', breweries_path %>
</p>
